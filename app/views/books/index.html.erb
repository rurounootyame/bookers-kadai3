<main>
  <% if @book_new.errors.any? %>
    <%= @book_new.errors.count %>errors prohibited this obj from being saved:
    <ul>
    <% @book_new.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
    </ul>
  <% end %>
  <div class='container px-5 px-sm-0'>
    <div class='row'>
      <div class='col-md-3'>
        <%= render 'books', user: @user %>
        <%= render 'books2', book_new: @book_new %>
      </div>

      <div class='col-md-8 offset-md-1'>
        <h2>Books</h2>
        <table class='table table-hover table-inverse'>
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
         <% @books.each do |book| %>
           <td>
             <%= link_to user_path(book.user) do %>
              <td><%= image_tag book.user.get_profile_image, size: "100x100" %></td>
              <td><%= link_to book.title, book_path(book) %></td>
             <% end %>
           </td>
               <th><%= book.body %></th>
          </tbody>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</main>